{% form_theme form with ['form/fields.html.twig']  %}
{{ form_start(form) }} 
<div class="container-fluid quote my-5 py-5" data-parallax="scroll" data-image-src="/img/carousel-2.jpg">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="bg-white rounded p-4 p-sm-5 wow fadeIn" data-wow-delay="0.5s">
                    <h1 class="display-5 text-center mb-5">{{ 'Sign Up' | trans }}</h1>
                    <div class="row g-3">                        
                        {{ form_errors(form) }}
                        {{- form_rest(form) -}}
                        <div class="col-12 text-center">
                            <button class="btn btn-primary py-3 px-4" type="submit">{{ button_label|default('Submit Now') }}</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}
