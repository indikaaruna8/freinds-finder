{% extends 'layout/layout.html.twig' %}


{% block title %}Admin index{% endblock %}

{% block body %}   
    <div class="container-fluid quote my-4 py-4" data-parallax="scroll" data-image-src="/img/carousel-2.jpg">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="bg-white rounded p-4 p-sm-9 wow fadeIn" data-wow-delay="0.5s">
                        <h1 class="display-5 text-center mb-5">{{ 'Users' | trans }}</h1>
                        <div class="row g-3">                        

                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Uuid</th>
                                        <th>Email</th>
                                        <th>Username</th>
                                        <th>Name</th>
                                        <th>Password</th>
                                        <th>CreatedAt</th>
                                        <th>UpdatedAt</th>
                                        <th>actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for admin in admins %}
                                        <tr>
                                            <td>{{ admin.id }}</td>
                                            <td>{{ admin.uuid }}</td>
                                            <td>{{ admin.email }}</td>
                                            <td>{{ admin.username }}</td>
                                            <td>{{ admin.name }}</td>
                                            <td>{{ admin.password }}</td>
                                            <td>{{ admin.createdAt ? admin.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                            <td>{{ admin.updatedAt ? admin.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                            <td>
                                                <a href="{{ path('app_admin_show', {'uuid': admin.uuid}) }}">show</a>
                                                <a href="{{ path('app_admin_edit', {'uuid': admin.uuid}) }}">edit</a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="9">no records found</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                            <div class="col-12 text-center">
                                <a href="{{ path('app_admin_new') }}" class="btn btn-primary py-3 px-4" >{{ button_label|default('Create new') }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    
{% endblock %}
